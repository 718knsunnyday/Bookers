<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book) %></td>
        <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <h2>New book</h2>
  
<% if @book.errors.any? %>
  <%= form_with model: @book,local: true do |f| %>

    <div class="field">
      <label for="field_with_errors">Title</label>
      <%= f.text_field:title %>
    </div>

    <div class="field">
      <label for="field_with_errors">Body</label>
      <%= f.text_area:body %>
    </div>
    
    <div class="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  
<% else %>
    <%= form_with model: @book,local: true do |f| %>

    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field:title %>
    </div>

    <div class="field">
      <label for="book_title">Body</label>
      <%= f.text_area:body %>
    </div>
    <div class="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
    
 <% end %>